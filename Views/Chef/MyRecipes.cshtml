@model IEnumerable<RecipeBlogProject.Models.Recipe>

@{
    Layout = "~/views/shared/_ChefLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col">
            <!-- Recipes Table -->
            <div class="card shadow mb-4 p-3">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recipes</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Recipe Name</th>
                                    <th>Prices</th>
                                    <th>Ingredients</th>
                                    <th>Status</th>
                                    <th>Chef Name</th>
                                    <th>Recepie Sales<th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.Receipename</td>
                                        <td> $@item.Price</td>
                                        <td> @item.Ingredients</td>
                                        <td> @item.Isapproved</td>
                                        <td> @item.Chef.Person.Firstname @item.Chef.Person.Lastname</td>
                                        <td> @item.Recipepayments.Count()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        

 
