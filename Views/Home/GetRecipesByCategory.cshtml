@model IEnumerable<Recipe>
@{
    Layout = "~/views/shared/_GetRecipesByCategoryLayout.cshtml";
}


<section id="chefs" class="chefs" style="margin-top:7rem;">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 class="text-center">Recipes</h2>
            <p>Please Enjoy! Buying Ours Recipes</p>
        </div>

        <div class="row">

            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="member" data-aos="zoom-in" data-aos-delay="100" >
                        <img src=@Url.Content("~/Images/recipes-images/" + item.ImagePath) class="card-img-top" asp-append-version="true"
                             width="100" height="300">
                        <div class="member-info">
                            <div class="member-info-content" style="border-color:white">
                                <h2 class="card-title" style="color:white">@item.Receipename</h2>
                                <br />
                                <h6 class="card-title" style="color:white">Ingredients:</h6>
                                <p><span>@item.Ingredients</span></p>
                                <br />
                                <h4 class="card-title mb-3" style="color:#cda45e;"><strong>$@item.Price</strong></h4>
                            </div>
                        </div>
                        
                        <div class="social">
                            <a asp-action="CheckUserCardInfo" asp-route-id="@item.id" class="btn btn-secondary" style="border:3px solid #cda45e; color:White;  background-color:black; padding:8px 25px; text-transform:uppercase; font-size:13px; font-weight:500; letter-spacing:1px; transition:0.3s;">
                                Buy Recipe
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section><!-- End Chefs Section -->