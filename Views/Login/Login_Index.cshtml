@model Person;
@{
    Layout = "~/views/shared/_LoginLayout.cshtml";
}

<form asp-action="Login" method="POST" class="signin-form">
	<div class="form-group mb-3">
		<label asp-for="Email" class="label">Email</label>
		<input asp-for="Email" type="email" class="form-control" placeholder="e.g john@example.com" required>
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="Password" class="label">Password</label>
		<input asp-for="Password" type="password" class="form-control" placeholder="e.g J0hn.13lter" required>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
	</div>
</form>