@model Person;
@{
    Layout = "~/views/shared/_RegisterLayout.cshtml";
}



@if (TempData["PersonId"] == null)
{
    <div class="Register-Form-Container" style="margin-top:7rem;">
        <section id="SignUpForm" class="SignUpForm">
            <div class="container" data-aos="fade-up" style="padding:2rem;">

                <div class="section-title p-0 text-start">
                    <h2 class="text-start">Join us</h2>
                    <p>Sign Up</p>
                </div>
                <div class="row" style="margin-left:50rem;">
                    <h6>Want To Join Us As A Chef?<span style="margin-left:0.3rem"><a class="link" asp-action="ChefRegisterIndex">  Join Now!</a></span></h6>
                </div>
                <form asp-controller="Register" asp-action="Register" method="POST" id="booking-form" class="p-0">
                    <div class="form-group form-input">
                        <input asp-for="Firstname" type="text" id="name" required />
                        <label asp-for="Firstname" class="form-label">First Name</label>
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group form-input">
                        <input asp-for="Lastname" type="text" id="name" required />
                        <label asp-for="Lastname" class="form-label">Last Name</label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="form-group form-input">
                        <input asp-for="Gender" type="text" id="name" required />
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group form-input">
                        <input asp-for="Email" type="email" id="name" required />
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-input">
                        <input asp-for="Phone" type="number" id="phone" required />
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group form-input">
                        <input asp-for="Password" type="password" id="name" required />
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-submit" style="margin-top:3rem;">
                        @*  <input style="color:black;" type="submit" value="Register" class="submit" id="submit" name="submit" /> *@
                        <div class="text-center">
                            <button type="submit" value="Register" class="submit register-btn" id="submit" name="submit">Register</button>
                        </div>
                    </div>
                    <div class="text-center" style="margin-top:1.5rem;">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </form>

            </div>
        </section>
    </div>
}